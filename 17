#include <iostream>
using namespace std;
int main ()
{
int a[12];
int i=0;
cout << "Please enter the test scores: "<<endl;
for (i=0;i<12;i++)
    cin >> a[i];
int max=a[0];
for (i=0;i<12;i++){
    if (a[i]>max)
        max = a[i];
}
cout << "The highest score is: "<<max<<endl;

for (i=0;i<12;i++){
	a[i] = double(a[i])/double(max)*100;
	cout << a[i] <<" "<<endl;
}
return 0;
}
